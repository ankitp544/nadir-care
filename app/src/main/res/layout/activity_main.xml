<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:padding="16dp"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- App Title -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:textSize="32sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:gravity="center"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="16dp" />

            <!-- File Selection Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardFileSelection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/card_background">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Select Your Blood Count Report"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"
                        android:layout_marginBottom="12dp" />

                    <TextView
                        android:id="@+id/tvFileName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/no_file_selected"
                        android:textSize="14sp"
                        android:textColor="@color/text_secondary"
                        android:layout_marginBottom="16dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnSelectFile"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/select_report"
                        android:textSize="16sp"
                        android:padding="12dp"
                        app:icon="@android:drawable/ic_menu_upload"
                        app:iconGravity="textStart" />

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Upload Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnUpload"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/upload_report"
                android:textSize="18sp"
                android:textStyle="bold"
                android:padding="16dp"
                android:layout_marginBottom="24dp"
                android:enabled="false"
                app:cornerRadius="8dp" />

            <!-- Progress Indicator -->
            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="24dp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tvProgressText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/analyzing"
                android:textSize="16sp"
                android:textColor="@color/text_primary"
                android:gravity="center"
                android:layout_marginBottom="24dp"
                android:visibility="gone" />

            <!-- Results Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardResults"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/card_background">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/recommendation"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"
                        android:layout_marginBottom="16dp" />

                    <!-- Recommendation Type -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/cardRecommendationType"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="2dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="16dp"
                            android:gravity="center_vertical">

                            <ImageView
                                android:id="@+id/ivRecommendationIcon"
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:layout_marginEnd="16dp"
                                app:srcCompat="@android:drawable/ic_dialog_info"
                                app:tint="@color/primary" />

                            <TextView
                                android:id="@+id/tvRecommendationType"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Visit Doctor"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:textColor="@color/text_primary" />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <!-- Reasoning -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Reasoning:"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:id="@+id/tvReasoning"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Your medical report indicates..."
                        android:textSize="14sp"
                        android:textColor="@color/text_secondary"
                        android:layout_marginBottom="16dp" />

                    <!-- Suggested Actions -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Suggested Actions:"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:id="@+id/tvSuggestedActions"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="1. Schedule an appointment\n2. Follow medication schedule"
                        android:textSize="14sp"
                        android:textColor="@color/text_secondary" />

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Error Message -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardError"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/error_background_alpha">

                <TextView
                    android:id="@+id/tvError"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Error message"
                    android:textSize="14sp"
                    android:textColor="@color/error"
                    android:padding="16dp" />
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>

